---
const today = new Date();
---

<style lang="scss">
  @use "@opendatafit/common-styles/common-styles/variables/fonts";
  @use "@opendatafit/common-styles/common-styles/mixins/lists";

  @use "../styles/mixins/breakpoints";

  strong {
    font-variation-settings:
      "opsz" 14,
      "wght" 550;
  }

  footer.site-footer {
    container-type: inline-size;
    padding-top: 1rem;
    padding-bottom: 1rem;

    .footer-base {
      margin-top: 1rem;
      display: flex;

      .website-attribution {
        margin-left: auto;
      }

      @container (max-width: 600px) {
        display: block;
        text-align: center;
        .website-attribution {
          margin: 1em 0;
          display: block;
        }
      }
    }

    .project-attribution {
      margin: 2em 0;
      text-align: center;
    }
    .site-source i {
      margin-right: 3px;
    }
    small.website-attribution,
    .site-source a {
      @include fonts.monospace;
      font-family: var(--monospace-font);
      font-weight: 400;
    }

    .supporters {
      @include lists.reset;
      box-sizing: border-box;
      display: grid;
      justify-content: center;
      gap: 3ch;
      margin: 0 auto;
      width: auto;
      grid-auto-rows: 5em;

      grid-template-columns: repeat(4, auto);
      margin-top: 1em;
      margin-bottom: 2em;

      @include breakpoints.mobile-bp {
        grid-template-columns: repeat(2, auto);
      }

      @media (max-width: 500px) {
        grid-template-columns: repeat(1, auto);
      }

      a {
        display: block;
        height: 100%;
        min-width: 0;
      }

      img {
        min-width: 0;
        height: 100%;
        &.unsw-logo {
          height: 80%;
        }
        &.ardc-logo {
          height: 75%;
        }
      }
    }
  }
</style>

<footer class="site-footer">
  <div class="project-attribution">
    <div class="supporters-container">
      <strong>Proudly supported by</strong>
      <ul class="supporters">
        <li>
          <a href="https://www.unsw.edu.au">
            <img class="unsw-logo" src="/assets/images/logos/unsw.svg" />
          </a>
        </li>
        <li>
          <a href="https://www.rna.unsw.edu.au">
            <img class="rnai-logo" src="/assets/images/logos/unsw-rnai.png" />
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
